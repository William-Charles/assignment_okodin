<header class="page-header">
  <h1>Users</h1>
  <a href="/users/new" class="btn btn-primary">+ New User</a>
</header>


{{#if users.length }}
  <table class="table">
    <thead>
      <tr>
        <th>Firstname</th>
        <th>Last Name</th>
        <th>Username</th>
        <th>Email</th>
        <th>distance</th>
        <th>Gender</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each users as |user| }}
      <tr>
        <td>
          <a href="/users/{{ user.Profile.id }}">{{ user.fname }}</a>
        </td>
        <td>
          <a href="/users/{{ user.Profile.id }}">{{ user.lname }}</a>
        </td>
        <td>
          <a href="/users/{{ user.Profile.id }}">{{ user.username }}</a>
        </td>
        <td>
          <a href="/users/{{ user.Profile.id }}">{{ user.email }}</a>
        </td>
        <td>
          <a href="/users/{{ user.Profile.id }}">{{ user.Profile.Location.distance }}</a>
        </td>
        <td>
          <a href="/users/{{ user.Profile.id }}">{{ user.Profile.gender }}</a>
        </td>
        <td>
          <a href="/users/{{ user.Profile.id }}/edit">Edit</a>
        </td>
        <td>
          <a href="/users/{{ user.Profile.id }}?_method=delete" class="text-danger">Delete</a>
        </td>
      </tr>
      {{/each }}
    </tbody>
  </table>
{{else }}
  <p class="text-danger">No users</p>
{{/if }}
